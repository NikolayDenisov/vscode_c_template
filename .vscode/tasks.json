//compiler build settings
{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "C/C++ build active file",
        "command": "/usr/bin/gcc",
        "args": ["-g", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
        "options": {
          "cwd": "/usr/bin"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "compiler: /usr/bin/gcc"
      }
    ]
  }